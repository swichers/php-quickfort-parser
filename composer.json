{
  "name": "swichers/php-quickfort-parser",
  "description": "Parser for QuickFort blueprint files.",
  "type": "library",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "Steven Wichers",
      "email": "me@stevenwichers.com",
      "homepage": "https://stevenwichers.com"
    }
  ],
  "require": {
    "php": ">=7.1"
  },
  "autoload": {
    "psr-4": {
      "QuickFort\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.4",
    "codacy/coverage": "dev-master"
  },
  "scripts": {
    "phpcs": [
      "./vendor/bin/phpcs"
    ],
    "phpunit": [
      "./vendor/bin/phpunit --colors=always"
    ]
  }
}
