{
  "name": "swichers/php-quickfort-parser",
  "description": "Parser for QuickFort blueprint files.",
  "type": "library",
  "license": "GNU GPLv3",
  "authors": [
    {
      "name": "Steven Wichers",
      "email": "me@stevenwichers.com",
      "homepage": "https://stevenwichers.com"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-mbstring": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "QuickFort\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "scripts": {
    "phpcs": [
      "./vendor/bin/phpcs"
    ],
    "phpunit": [
      "./vendor/bin/phpunit --colors=always"
    ]
  }
}
